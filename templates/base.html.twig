<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}LineshoP
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-dark">
				<div class="container-fluid">

					<a class="navbar-brand text-white" href="/">
						LineshoP
						<small>the best online shop, for real</small>
					</a>

					<div class="align-items-center text-success ms-auto">
						<div class="cart-info me-3">
							<a href="{{ path('app_panier') }}">
								<i class="fa-solid fa-cart-shopping fa-2x"></i>
							</a>
							<div>
								<div>Items</div>
								<div id="item-count">{{ app.session.get('panier') is not null ? app.session.get('panier').getTotalItems() | default(0) : 0 }}</div>
							</div>
							<div>
								<div>Total</div>
								<div id="total-amount">{{ app.session.get('panier') is not null ? app.session.get('panier').getTotalAmount() | default('0') : '0' }} €</div>
							</div>
						</div>
					</nav>
					<div class="container-fluid py-3 mt-0 bg-secondary text-center ">
						<div class="row">
							<div class="col">


								{% if app.user %}
									<div class="mb-3">
										Welcome {{ app.user.email }} ! You can <a href="{{ path('app_logout') }}">Logout</a>.
									</div>
								{% else %}
									<div class="mb-3">
										User not connected ! You can <a href="{{ path('app_login') }}">Login</a>.
									</div>
								{% endif %}

							</div>
						</div>
					</div>
					<div class="container-fluid py-3 mt-0 ms-1 bg-white">
						<div class="row">
							<div class="col">
								<a class="btn btn-success text-white text-decoration-none me-3" href="/" role="button">All Categories</a>
								<a class="btn btn-success text-white text-decoration-none me-3" href="{{ path('category_consoles') }}" role="button">Consoles</a>
								<a class="btn btn-success text-white text-decoration-none" href="{{ path('category_jeux') }}" role="button">Games</a>
							</div>
						</div>
					</div>
				</header>

				<main>
					{% block body %}{% endblock %}
				</main>

				<footer
					class="bg-dark text-center text-white py-3 fw-bold mt-auto">
					<!-- Copyright -->

					© 2024 Copyright :
					<a class="text-white" href="https://github.com/sikourix" target="_blank">
						Farid -
					</a>
					<a class="text-white" href="https://github.com/Hakim-Lakehal" target="_blank">
						Hakim -
					</a>
					<a class="text-white" href="https://github.com/SuperClodo" target="_blank">
						Stephane - 
					</a>
					<a class="text-white" href="https://github.com/jsena21" target="_blank">
						Jordan.S</a>
				</footer>

				{% block javascripts %}
					{% block importmap %}
						{{ importmap('app') }}
					{% endblock %}
					<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
					<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
					<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
					<script src="https://kit.fontawesome.com/c278bb2acf.js" crossorigin="anonymous"></script>
				{% endblock %}
			</body>
		</html>
	</body>
</html>