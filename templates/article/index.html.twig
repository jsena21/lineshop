{% extends 'base.html.twig' %}

{% block title %}LineShop
{% endblock %}

{% block body %}
	{% if session.user is defined %}
		<p class="text">
			Welcome aaa@a.fr you can
			<a class="logout" href="{{path('app_logout')}}">Logout</a>
		</p>
	{% else %}
		<p class="text">
			Welcome, you can
			<a class="logout" href="{{path('app_login')}}">login</a>
		</p>
	{% endif %}
	<ul>
		<li>
			<a href="#">All Categories</a>
		</li>
		<li>
			<a href="#">Consoles</a>
		</li>
		<li>
			<a href="#">Jeux</a>
		</li>
	</ul>
	<div class="container mt-5">
		<div class="row">
			{% for article in articles %}
				<div class="col-md-3 mb-4">
					<div class="card border border-success shadow-lg">
						<img src="{{ asset('images/' ~ article.image) }}" width="auto" height="200px" alt="{{ article.description }}">
						<div class="card-body bg-success-subtle border-top border-success">
							<div class="row justify-content-center align-items-center">
								<div class="col-8 border-right border-success">
									<div class="fs-6 text card-title">{{ article.nom }}</div>
								</div>
								<div class="col-4 text-right">
									<div class="fs-4 text card-title text-success">{{ article.prix }}
										â‚¬</div>
								</div>
							</div>
							<div class="row mt-2 border-top border-success pt-2">
								<div class="col-12 text-center">
									<div class="row justify-content-center align-items-center">
										<div class="col-3">
											<i class="fas fa-gift gift-icon fa-lg"></i>
										</div>
										<div class="col-6">
											<div class="rating">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa-regular fa-star"></i>
											</div>

										</div>
										<div class="col-3 text-right">
											<button class="btn btn-success btn-block">
												<i class="fa-solid fa-cart-plus"></i>
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>{% endblock %}
