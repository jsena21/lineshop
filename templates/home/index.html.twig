{% extends 'base.html.twig' %}

{% block title %}LineshoP Welcome !
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
			{% for article in articles %}
				<div class="col-md-3 mb-4">
					<div class="card">
						<img src="{{ asset('images/' ~ article.image) }}" with="auto" height="200px" alt="{{ article.description }}">
						<div class="card-body">
							<h5 class="card-title">{{ article.getNom}}</h5>
							<p class="card-text">{{ article.getDescription }}</p>
							<button class="btn btn-primary btn-block">
								<i class="fas fa-cart-plus"></i>
								Ajouter au panier
							</button>
							<div class="mt-2">
								<i class="fas fa-gift gift-icon"></i>
							</div>

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
