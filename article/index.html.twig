{% extends 'base.html.twig' %}

{% block title %}LineshoP Welcome !
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
			{% for article in articles %}
				<div class="col-md-3 mb-4">
					<div class="card border border-success shadow-lg">
						<img src="{{ asset('images/' ~ article.image) }}" width="auto" height="200px" alt="{{ article.description }}">
						<div class="card-body bg-success-subtle border-top border-success">
							<div class="row justify-content-center align-items-center">
								<div class="col-8 border-right border-success">
									<div class="fs-6 text card-title">{{ article.nom }}</div>
								</div>
								<div class="col-4 text-right">
									<div class="fs-4 text card-title text-success">{{ article.prix }}
										â‚¬</div>
								</div>
							</div>
							<div class="row mt-2 border-top border-success pt-2">
								<div class="col-12 text-center">
									<div class="row justify-content-center align-items-center">
										<div class="col-3">
											<i class="fas fa-gift gift-icon fa-lg"></i>
										</div>
										<div class="col-6">
											<div class="rating">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa-regular fa-star"></i>
											</div>

										</div>
										<div class="col-3 text-right">
											<button class="btn btn-success btn-block">
												<i class="fa-solid fa-cart-plus"></i>
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
